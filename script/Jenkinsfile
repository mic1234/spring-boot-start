pipeline {
  agent {
    kubernetes {
      label 'podlabel'
      yaml """
kind: Pod
metadata:
  name: jenkins-agent
spec:
  containers:
  - name: maven
    image: gcr.io/cloud-builders/mvn
    imagePullPolicy: Always
    tty: true
    stdin: true
    command:
      - cat
  - name: jnlp
    image: 'jenkins/inbound-agent:4.3-4-alpine'
    args: ['\$(JENKINS_SECRET)', '\$(JENKINS_NAME)']
  - name: gcb-docker
    image: gcr.io/cloud-builders/docker
    command:
      - /bin/bash
      - -c
      - while true; do date; sleep 1; done
  restartPolicy: Never
"""
    }
  }

  stages {
    stage('Run maven') {
      steps {
        container('maven') {
          sh 'ls -al'
          sh 'mvn clean package'
        }
        container('gcb-docker') {
          sh 'ls -al'
          sh 'docker build -t gcr.io/solar-botany-297306/gs-spring-boot-docker:v2 .'
        }        
      }
    }
  }
}
