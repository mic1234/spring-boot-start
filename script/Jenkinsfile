pipeline {
  agent {
    kubernetes {
      label 'podlabel'
      yaml """
kind: Pod
metadata:
  name: jenkins-agent
spec:
  containers:
  - name: maven
    image: gcr.io/cloud-builders/mvn
    imagePullPolicy: Always
    tty: true
    stdin: true
  - name: jnlpslave
    image: jenkinsci/jnlp-slave
    imagePullPolicy: Always
    tty: true
    command:
     - /bin/bash
     - -c
     - cat
    workingDir: /home/jenkins
    stdin: true
  restartPolicy: Never
"""
    }
  }

  tools {
      maven 'maven363'
      jdk 'jdk8'
  }

  stages {
    stage ('Initialize') {
      steps {
        sh '''
          echo "PATH = ${PATH}"
          echo "M2_HOME = ${M2_HOME}"
        '''
      }
    }

    stage('Example Build') {
      steps {
        container('maven') {
          sh 'mvn clean spring-boot:build-image -Dspring-boot.build-image.imageName=gcr.io/solar-botany-297306/gs-spring-boot-start:v4'
        }
      }
    }
  }
}
